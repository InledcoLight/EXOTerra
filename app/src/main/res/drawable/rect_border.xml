<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!--  Top  -->
    <item
        android:height="1dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="#D7CC05"
                android:endColor="#61A33E"/>
        </shape>
    </item>

    <!--  Bottom  -->
    <item
        android:top="100dp"
        android:height="1dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="#D7CC05"
                android:endColor="#61A33E"/>
        </shape>
    </item>

    <!--  Left  -->
    <item
        android:width="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#D7CC05"/>
        </shape>
    </item>

    <!--  Right  -->
    <item
        android:left="100dp"
        android:width="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#61A33E"/>
        </shape>
    </item>

</layer-list>