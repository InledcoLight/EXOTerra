        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textSizeSecondary"
                android:text="@string/delete_habitat"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/habitat_detail_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="?attr/selectableItemBackground"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_delete_red_24dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/shape_rect_gradient"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textSizeSecondary"
                android:text="@string/members"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/habitat_detail_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="?attr/selectableItemBackground"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_person_add_white_24dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/shape_rect_gradient"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/habitat_detail_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.inledco.exoterra.view.GradientCornerButton
            android:id="@+id/habitat_detail_back"
            style="?attr/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:text="@string/back"
            app:direction="horizontal"
            app:strokeWidth="@dimen/strokeWidth"
            app:radius="@dimen/cornerRadius"
            app:gradientStart="@color/gradientYellow"
            app:gradientEnd="@color/gradientWhite"/>
    </LinearLayout>

</LinearLayout>