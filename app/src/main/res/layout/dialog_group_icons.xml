            android:text="PLANTS"/>
        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="0sp"
            android:background="@drawable/selector_checkable_image_bg"
            android:drawableTop="@drawable/ic_plant_1"/>
        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="0sp"
            android:background="@drawable/selector_checkable_image_bg"
            android:drawableTop="@drawable/ic_plant_2"/>
