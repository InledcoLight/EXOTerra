            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="5"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/textSizeSecondary"
            android:text="TYPE"/>
        <CheckedTextView
            android:id="@+id/dialog_groupicon_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="0sp"
            android:background="@drawable/selector_checkable_image_bg"
            android:drawableTop="@drawable/ic_type_1"/>
        <CheckedTextView
            android:id="@+id/dialog_groupicon_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="0sp"
            android:background="@drawable/selector_checkable_image_bg"
            android:drawableTop="@drawable/ic_type_2"/>
        <CheckedTextView
            android:id="@+id/dialog_groupicon_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="0sp"
            android:background="@drawable/selector_checkable_image_bg"
            android:drawableTop="@drawable/ic_type_3"/>
        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="0sp"
            android:background="@drawable/selector_checkable_image_bg"
            android:drawableTop="@drawable/ic_type_4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="5"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/textSizeSecondary"
            android:text="ANIMALS"/>
        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="0sp"
            android:background="@drawable/selector_checkable_image_bg"
            android:drawableTop="@drawable/ic_animal_1"/>
        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="0sp"
            android:background="@drawable/selector_checkable_image_bg"
            android:drawableTop="@drawable/ic_animal_2"/>
        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="0sp"
            android:background="@drawable/selector_checkable_image_bg"
            android:drawableTop="@drawable/ic_animal_3"/>
        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="0sp"
            android:background="@drawable/selector_checkable_image_bg"
            android:drawableTop="@drawable/ic_animal_4"/>
        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="0sp"
            android:background="@drawable/selector_checkable_image_bg"
            android:drawableTop="@drawable/ic_animal_5"/>
        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
