<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_background"
    android:clickable="true">

    <include
        layout="@layout/layout_uvb_title"/>

    <com.inledco.exoterra.view.GradientCornerLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:strokeWidth="@dimen/strokeWidth"
        app:radius="@dimen/cornerRadius"
        app:direction="horizontal"
        app:gradientStart="@color/gradientYellow"
        app:gradientEnd="@color/gradientGreen">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textSizePrimary"
            android:textAllCaps="true"
            android:text="@string/choose_uvb_light"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <CheckedTextView
                android:id="@+id/uvb_light_reptile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:background="@drawable/selector_uvblight"
                android:gravity="center_horizontal"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/devicon_reptile_uvb"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:lines="2"
                android:maxLines="2"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textSizeTiny"
                android:text="@string/reptile_uvb"/>
            <CheckedTextView
                android:id="@+id/uvb_light_linear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:background="@drawable/selector_uvblight"
                android:gravity="center_horizontal"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/devicon_linear_uvb"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:lines="2"
                android:maxLines="2"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textSizeTiny"
                android:text="@string/linear_uvb"/>
            <CheckedTextView
                android:id="@+id/uvb_light_solarglo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:background="@drawable/selector_uvblight"
                android:gravity="center_horizontal"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/devicon_solarglo"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:lines="2"
                android:maxLines="2"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textSizeTiny"
                android:text="@string/solar_glo"/>
            <CheckedTextView
                android:id="@+id/uvb_light_sunray"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:background="@drawable/selector_uvblight"
                android:gravity="center_horizontal"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/devicon_sunray"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:lines="2"
                android:maxLines="2"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textSizeTiny"
                android:text="@string/sunray"/>
            <CheckedTextView
                android:id="@+id/uvb_light_solarray"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:background="@drawable/selector_uvblight"
                android:gravity="center_horizontal"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/devicon_solarray"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:lines="2"
                android:maxLines="2"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textSizeTiny"
                android:text="@string/solar_ray"/>
            <CheckedTextView
                android:id="@+id/uvb_light_turtle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:background="@drawable/selector_uvblight"
                android:gravity="center_horizontal"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/devicon_turtle_uvb"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:lines="2"
                android:maxLines="2"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textSizeTiny"
                android:text="@string/turtle_uvb"/>
        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/textSizeSecondary"
            android:textColor="@color/textColorSencondary"
            android:text="@string/warn_choose_light"/>
    </com.inledco.exoterra.view.GradientCornerLinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp">
        <com.inledco.exoterra.view.GradientCornerButton
            android:id="@+id/uvb_light_back"
            style="?attr/buttonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:background="?attr/selectableItemBackground"
            android:text="@string/back"
            app:direction="horizontal"
            app:gradientEnd="@color/gradientWhite"
            app:gradientStart="@color/gradientYellow"
            app:radius="@dimen/cornerRadius"
            app:strokeWidth="@dimen/strokeWidth" />
        <com.inledco.exoterra.view.GradientCornerButton
            android:id="@+id/uvb_light_next"
            style="?attr/buttonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:background="?attr/selectableItemBackground"
            android:text="@string/next"
            app:direction="horizontal"
            app:gradientEnd="@color/gradientGreen"
            app:gradientStart="@color/gradientYellow"
            app:radius="@dimen/cornerRadius"
            app:strokeWidth="@dimen/strokeWidth" />
    </LinearLayout>

</LinearLayout>