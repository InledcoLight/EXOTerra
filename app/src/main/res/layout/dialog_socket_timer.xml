<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/marginUnit"
    android:layout_marginLeft="@dimen/marginUnit"
    android:layout_marginRight="@dimen/marginUnit"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textSizePrimary"
            android:text="@string/action"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Spinner
            android:id="@+id/dialog_socket_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/socket_actions"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"/>

    <RadioGroup
        android:id="@+id/dialog_socket_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/dialog_socket_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="right"
            android:button="@null"
            android:background="?attr/selectableItemBackground"
            android:textSize="@dimen/textSizeSecondary"
            android:textColor="@color/selector_week"
            android:text=""/>
        <RadioButton
            android:id="@+id/dialog_socket_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="right"
            android:button="@null"
            android:background="?attr/selectableItemBackground"
            android:textSize="@dimen/textSizeSecondary"
            android:textColor="@color/selector_week"
            android:text=""/>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <NumberPicker
            android:id="@+id/dialog_socket_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/marginUnit"
            android:text=":"/>
        <NumberPicker
            android:id="@+id/dialog_socket_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/marginUnit"
            android:text=":"/>
        <NumberPicker
            android:id="@+id/dialog_socket_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <CheckBox
            android:id="@+id/dialog_socket_sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:button="@null"
            android:textColor="@color/selector_week"
            android:textSize="@dimen/textSizeSecondary"
            android:text="@string/week_sun"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <CheckBox
            android:id="@+id/dialog_socket_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:button="@null"
            android:textColor="@color/selector_week"
            android:textSize="@dimen/textSizeSecondary"
            android:text="@string/week_mon"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <CheckBox
            android:id="@+id/dialog_socket_tue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:button="@null"
            android:textColor="@color/selector_week"
            android:textSize="@dimen/textSizeSecondary"
            android:text="@string/week_tue"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <CheckBox
            android:id="@+id/dialog_socket_wed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:button="@null"
            android:textColor="@color/selector_week"
            android:textSize="@dimen/textSizeSecondary"
            android:text="@string/week_wed"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <CheckBox
            android:id="@+id/dialog_socket_thu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:button="@null"
            android:textColor="@color/selector_week"
            android:textSize="@dimen/textSizeSecondary"
            android:text="@string/week_thu"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <CheckBox
            android:id="@+id/dialog_socket_fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:button="@null"
            android:textColor="@color/selector_week"
            android:textSize="@dimen/textSizeSecondary"
            android:text="@string/week_fri"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <CheckBox
            android:id="@+id/dialog_socket_sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:button="@null"
            android:textColor="@color/selector_week"
            android:textSize="@dimen/textSizeSecondary"
            android:text="@string/week_sat"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_socket_exec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/textSizeSecondary"
        android:text="@string/execute_once"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"/>

</LinearLayout>