<?xml version="1.0" encoding="utf-8"?>
<com.inledco.exoterra.view.GradientCornerLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    app:strokeWidth="@dimen/strokeWidth"
    app:radius="@dimen/cornerRadius"
    app:gradientStart="@color/gradientYellow"
    app:gradientEnd="@color/gradientGreen"
    app:direction="horizontal">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/light_manual_spectrum"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <include
            android:id="@+id/light_manual_include1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/item_progress"/>
        <include
            android:id="@+id/light_manual_include2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/item_progress"/>
        <include
            android:id="@+id/light_manual_include3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/item_progress"/>
        <include
            android:id="@+id/light_manual_include4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/item_progress"/>
        <include
            android:id="@+id/light_manual_include5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/item_progress"/>
        <include
            android:id="@+id/light_manual_include6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            layout="@layout/item_progress"/>
    </LinearLayout>
</com.inledco.exoterra.view.GradientCornerLinearLayout>