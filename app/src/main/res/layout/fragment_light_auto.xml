<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:gravity="center_horizontal">

    <android.support.constraint.Guideline
        android:id="@+id/light_auto_gl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"/>

    <android.support.constraint.Guideline
        android:id="@+id/light_auto_gl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>

    <android.support.constraint.Guideline
        android:id="@+id/light_auto_gl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"/>

    <android.support.constraint.Guideline
        android:id="@+id/light_auto_gl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6"/>

    <android.support.constraint.Guideline
        android:id="@+id/light_auto_gl5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>

    <android.support.constraint.Guideline
        android:id="@+id/light_auto_gl6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.68"/>

    <android.support.constraint.Guideline
        android:id="@+id/light_auto_gl7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.92"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/auto_line_chart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/light_auto_gl1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/auto_iv_sunrise"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_sunrise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/auto_title_sunrise"
        app:layout_constraintStart_toStartOf="@+id/auto_title_sunrise"
        app:layout_constraintTop_toTopOf="@+id/light_auto_gl1"/>

    <ImageView
        android:id="@+id/auto_iv_day"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_midday"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/light_auto_gl3"
        app:layout_constraintStart_toEndOf="@+id/light_auto_gl2"
        app:layout_constraintTop_toTopOf="@+id/light_auto_gl1"/>

    <ImageView
        android:id="@+id/auto_iv_sunset"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_sunset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/light_auto_gl4"
        app:layout_constraintStart_toEndOf="@+id/auto_iv_day"
        app:layout_constraintTop_toTopOf="@+id/light_auto_gl1"/>

    <ImageView
        android:id="@+id/auto_iv_night"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_night"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/light_auto_gl5"
        app:layout_constraintStart_toEndOf="@+id/auto_iv_sunset"
        app:layout_constraintTop_toTopOf="@+id/auto_iv_sunset"/>

    <ImageView
        android:id="@+id/auto_iv_turnoff"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_turnoff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/light_auto_gl5"
        app:layout_constraintTop_toTopOf="@+id/light_auto_gl1"/>

    <TextView
        android:id="@+id/auto_title_sunrise"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#55000000"
        android:gravity="center"
        android:text="@string/sunrise"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/light_auto_gl6"
        app:layout_constraintEnd_toStartOf="@+id/light_auto_gl2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/auto_iv_sunrise"/>

    <TextView
        android:id="@+id/auto_title_day"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#55000000"
        android:gravity="center"
        android:text="@string/day_light"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/light_auto_gl6"
        app:layout_constraintEnd_toStartOf="@+id/light_auto_gl3"
        app:layout_constraintStart_toStartOf="@+id/light_auto_gl2"
        app:layout_constraintTop_toTopOf="@+id/light_auto_gl1"/>

    <TextView
        android:id="@+id/auto_title_sunset"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#55000000"
        android:gravity="center"
        android:text="@string/sunset"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/light_auto_gl6"
        app:layout_constraintEnd_toStartOf="@+id/light_auto_gl4"
        app:layout_constraintStart_toStartOf="@+id/light_auto_gl3"
        app:layout_constraintTop_toTopOf="@+id/auto_iv_sunset"/>

    <TextView
        android:id="@+id/auto_title_night"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#55000000"
        android:gravity="center"
        android:text="@string/night"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/light_auto_gl6"
        app:layout_constraintEnd_toStartOf="@+id/light_auto_gl5"
        app:layout_constraintStart_toStartOf="@+id/light_auto_gl4"
        app:layout_constraintTop_toTopOf="@+id/auto_iv_night"/>

    <TextView
        android:id="@+id/auto_title_turnoff"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#55000000"
        android:gravity="center"
        android:text="@string/turnoff"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/light_auto_gl6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/light_auto_gl5"
        app:layout_constraintTop_toTopOf="@+id/light_auto_gl1"/>

    <TextView
        android:id="@+id/auto_tv_sunrise"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#55000000"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/light_auto_gl7"
        app:layout_constraintEnd_toStartOf="@+id/light_auto_gl2"
        app:layout_constraintStart_toStartOf="@+id/auto_iv_sunrise"
        app:layout_constraintTop_toTopOf="@+id/light_auto_gl6"/>
    <TextView
        android:id="@+id/auto_tv_day"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="left|center_vertical"
        android:background="#55000000"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/light_auto_gl7"
        app:layout_constraintEnd_toStartOf="@+id/auto_tv_sunset"
        app:layout_constraintStart_toStartOf="@+id/light_auto_gl2"
        app:layout_constraintTop_toBottomOf="@+id/auto_title_day"/>
    <TextView
        android:id="@+id/auto_tv_sunset"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#55000000"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/light_auto_gl7"
        app:layout_constraintEnd_toStartOf="@+id/auto_iv_night"
        app:layout_constraintStart_toStartOf="@+id/auto_iv_sunset"
        app:layout_constraintTop_toTopOf="@+id/light_auto_gl6"/>
    <TextView
        android:id="@+id/auto_tv_night"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="left|center_vertical"
        android:background="#55000000"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/light_auto_gl7"
        app:layout_constraintEnd_toStartOf="@+id/auto_tv_turnoff"
        app:layout_constraintStart_toEndOf="@+id/auto_tv_sunset"
        app:layout_constraintTop_toBottomOf="@+id/auto_title_night"/>
    <TextView
        android:id="@+id/auto_tv_turnoff"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#55000000"
        android:gravity="center"
        android:text="@string/disabled"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/light_auto_gl7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/light_auto_gl5"
        app:layout_constraintTop_toTopOf="@+id/light_auto_gl6"/>

    <LinearLayout
        android:id="@+id/auto_ll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#AA000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auto_tv_sunset">
        <CheckedTextView
            android:id="@+id/auto_ctv_gis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Gis Enable"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
