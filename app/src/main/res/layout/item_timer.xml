<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckedTextView
            android:id="@+id/item_timer_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableRight="@drawable/selector_switch"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/item_timer_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="@dimen/textSizePrimary"
            android:textColor="@color/textColorPrimary"
            android:text="xx:xx:xx"/>

        <TextView
            android:id="@+id/item_timer_offtime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="@dimen/textSizePrimary"
            android:textColor="@color/textColorPrimary"
            android:text="xx:xx:xx"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        android:paddingRight="6dp">

        <CheckedTextView
            android:id="@+id/item_timer_sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginLeft="4dp"
            android:textAlignment="center"
            android:textColor="@color/selector_week"
            android:textSize="@dimen/textSizeTiny"
            android:text="@string/week_sun"/>
        <CheckedTextView
            android:id="@+id/item_timer_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginLeft="4dp"
            android:textAlignment="center"
            android:textColor="@color/selector_week"
            android:textSize="@dimen/textSizeTiny"
            android:text="@string/week_mon"/>
        <CheckedTextView
            android:id="@+id/item_timer_tue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginLeft="4dp"
            android:textAlignment="center"
            android:textColor="@color/selector_week"
            android:textSize="@dimen/textSizeTiny"
            android:text="@string/week_tue"/>
        <CheckedTextView
            android:id="@+id/item_timer_wed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="@color/selector_week"
            android:textSize="@dimen/textSizeTiny"
            android:text="@string/week_wed"/>
        <CheckedTextView
            android:id="@+id/item_timer_thu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginLeft="4dp"
            android:textAlignment="center"
            android:textColor="@color/selector_week"
            android:textSize="@dimen/textSizeTiny"
            android:text="@string/week_thu"/>
        <CheckedTextView
            android:id="@+id/item_timer_fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginLeft="4dp"
            android:textAlignment="center"
            android:textColor="@color/selector_week"
            android:textSize="@dimen/textSizeTiny"
            android:text="@string/week_fri"/>
        <CheckedTextView
            android:id="@+id/item_timer_sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginLeft="4dp"
            android:textAlignment="center"
            android:textColor="@color/selector_week"
            android:textSize="@dimen/textSizeTiny"
            android:text="@string/week_sat"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_rect_gradient"/>

</LinearLayout>