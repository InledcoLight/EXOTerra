<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:layout_width="wrap_content"
              android:layout_height="match_parent">

    <com.liruya.exoterra.view.VerticalSeekBarWrapper
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.liruya.exoterra.view.VerticalSeekBar
            android:id="@+id/item_slider_vertical_progress"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_margin="4dp"
            android:maxHeight="6dp"
            android:max="1000"
            android:progress="0"
            android:splitTrack="false"
            android:progressDrawable="@drawable/custom_seekbar_white"
            android:thumb="@drawable/custom_thumb_white"
            app:seekBarRotation="CW270"/>
    </com.liruya.exoterra.view.VerticalSeekBarWrapper>

    <TextView
        android:id="@+id/item_slider_vertical_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="xx%"/>

</LinearLayout>