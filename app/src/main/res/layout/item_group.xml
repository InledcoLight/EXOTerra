<?xml version="1.0" encoding="utf-8"?>
<com.inledco.exoterra.view.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="?attr/selectableItemBackground">

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:outlineSpotShadowColor="@color/colorTransparent"
        android:outlineAmbientShadowColor="@color/colorTransparent"
        app:cardElevation="8dp"
        app:strokeColor="@color/colorAccent"
        app:strokeWidth="1dp"
        app:contentPadding="8dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/colorTransparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="home2 name"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textSizePrimary" />
            <TextView
                android:id="@+id/item_group_devcnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/textColorSencondary"
                android:textSize="@dimen/textSizeSecondary" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/item_group_icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_device_default_white_64dp"/>
                <ImageView
                    android:id="@+id/item_group_icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_device_default_white_64dp"/>
                <ImageView
                    android:id="@+id/item_group_icon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_device_default_white_64dp"/>
                <ImageView
                    android:id="@+id/item_group_icon4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:padding="8dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_more_horiz_white_24dp"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.design.card.MaterialCardView>

</com.inledco.exoterra.view.SquareLayout>