<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginUnit">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.inledco.exoterra.view.MultiCircleProgress
                android:id="@+id/light_p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:background="?attr/selectableItemBackground"
                android:layout_gravity="center"
                app:centerText="P1"
                app:centerTextSize="@dimen/textSizeSecondary"
                app:circleWidth="2dp"
                app:dividerWidth="0dp"
                app:max="1000"
                app:progress="0"
                app:startAngle="-225"
                app:sweepAngle="270" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.inledco.exoterra.view.MultiCircleProgress
                android:id="@+id/light_p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:layout_gravity="center"
                app:centerText="P2"
                app:centerTextSize="@dimen/textSizeSecondary"
                app:circleWidth="2dp"
                app:dividerWidth="0dp"
                app:max="1000"
                app:progress="0"
                app:startAngle="-225"
                app:sweepAngle="270" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.inledco.exoterra.view.MultiCircleProgress
                android:id="@+id/light_p3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:layout_gravity="center"
                app:centerText="P3"
                app:centerTextSize="@dimen/textSizeSecondary"
                app:circleWidth="2dp"
                app:dividerWidth="0dp"
                app:max="1000"
                app:progress="0"
                app:startAngle="-225"
                app:sweepAngle="270" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.inledco.exoterra.view.MultiCircleProgress
                android:id="@+id/light_p4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:layout_gravity="center"
                app:centerText="P4"
                app:centerTextSize="@dimen/textSizeSecondary"
                app:circleWidth="2dp"
                app:dividerWidth="0dp"
                app:max="1000"
                app:progress="0"
                app:startAngle="-225"
                app:sweepAngle="270" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginUnit">

        <CheckedTextView
            android:id="@+id/light_p5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/selector_light_preset5"
            android:textSize="0sp"/>
        <CheckedTextView
            android:id="@+id/light_p6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/selector_light_preset2"
            android:textSize="0sp"/>
        <CheckedTextView
            android:id="@+id/light_p7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/selector_light_preset4"
            android:textSize="0sp"/>
        <CheckedTextView
            android:id="@+id/light_p8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/selector_light_preset7"
            android:textSize="0sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginUnit">

        <CheckedTextView
            android:id="@+id/light_p9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/selector_light_preset8"
            android:textSize="0sp"/>
        <CheckedTextView
            android:id="@+id/light_p10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/selector_light_preset3"
            android:textSize="0sp"/>
        <CheckedTextView
            android:id="@+id/light_p11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/selector_light_preset6"
            android:textSize="0sp"/>
        <CheckedTextView
            android:id="@+id/light_p12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/selector_light_preset9"
            android:textSize="0sp"/>
    </LinearLayout>

</LinearLayout>