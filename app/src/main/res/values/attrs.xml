<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MultiCircleProgress">
        <attr name="circleCount" format="integer"/>
        <attr name="startAngle" format="integer"/>
        <attr name="sweepAngle" format="integer"/>
        <attr name="progress" format="integer"/>
        <attr name="max" format="integer"/>
        <attr name="circleBackgroundColor" format="color|reference"/>
        <attr name="circleWidth" format="dimension|reference"/>
        <attr name="dividerWidth" format="dimension|reference"/>
        <attr name="circleColor" format="color"/>
        <attr name="dividerColor" format="color|reference"/>
        <attr name="centerText" format="string|reference"/>
        <attr name="centerTextColor" format="color|reference"/>
        <attr name="centerTextSize" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="MultiPointSeekbar">
        <attr name="pointCount" format="integer"/>
        <attr name="lineColor" format="color|reference"/>
        <attr name="thumbDrawable" format="reference"/>
        <attr name="selectedThumDrawable" format="reference"/>
        <attr name="thumbDrawableTint" format="integer"/>
        <attr name="thumbDrawableTintMode" format="integer"/>
        <attr name="thumbColor" format="color|reference"/>
        <attr name="selectedThumbColor" format="color|reference"/>
        <attr name="maximum" format="integer"/>
        <attr name="minimum" format="integer"/>
        <attr name="showHint" format="boolean"/>
        <attr name="hintBackgroundColor" format="color|reference"/>
        <attr name="maxLengthHint" format="string|reference"/>
        <attr name="hintSize" format="dimension"/>
        <attr name="hintColor" format="color|reference"/>
        <attr name="hintPadding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CustomTimePicker">
        <attr name="interval" format="integer"/>
        <attr name="is24Hour" format="boolean"/>
    </declare-styleable>
    
    <declare-styleable name="VerticalSeekBar">
        <attr name="seekBarRotation">
            <enum name="CW90" value="90"/>
            <enum name="CW270" value="270"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="GradientCornerView">
        <attr name="strokeWidth" format="dimension|reference"/>
        <attr name="radiusTopLeft" format="dimension|reference"/>
        <attr name="radiusTopRight" format="dimension|reference"/>
        <attr name="radiusBottomLeft" format="dimension|reference"/>
        <attr name="radiusBottomRight" format="dimension|reference"/>
        <attr name="radius" format="dimension|reference"/>
        <attr name="semiCircle" format="boolean"/>
        <attr name="gradientStart" format="color|reference"/>
        <attr name="gradientEnd" format="color|reference"/>
        <attr name="direction">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="GradientSemiCircleView">
        <attr name="colorStart" format="color|reference"/>
        <attr name="colorEnd" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="CircleSeekbar">
        <attr name="minProgress" format="integer"/>
        <attr name="maxProgress" format="integer"/>
        <attr name="curProgress" format="integer"/>
        <attr name="unreachedColor" format="color|reference"/>
        <attr name="progressColor" format="color|reference"/>
        <attr name="pointerColor" format="color|reference"/>
        <attr name="unreachedWidth" format="dimension|reference"/>
        <attr name="progressWidth" format="dimension|reference"/>
        <attr name="pointerRadius" format="dimension|reference"/>
        <attr name="seekable" format="boolean"/>
        <attr name="scrollOnce" format="boolean"/>
    </declare-styleable>
</resources>