<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
<!--        <item name="android:background">#231F20</item>-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorTransparent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="colorPrimary" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>

        <item name="android:fontFamily">@font/eurostileltstd</item>

        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSencondary</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textColorLink">@color/colorAccent</item>
        <item name="android:colorError" tools:targetApi="o">@color/colorRed</item>
        <item name="colorError">@color/colorRed</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/selector_button</item>
        <item name="colorButtonNormal">@color/selector_button</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorTransparent</item>

        <item name="android:windowBackground">@mipmap/ic_background</item>
        <item name="alertDialogTheme">@style/DialogCornerTheme</item>

        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>

        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
    </style>

    <style name="SwitchStyle2" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb_2</item>
        <item name="android:track">@drawable/switch_track_2</item>
    </style>

    <style name="ActivityAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
    </style>

    <style name="BottomDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogCornerTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/shape_roundrect_gradient</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/shape_roundrect_gradient</item>
    </style>

    <style name="DangerButtonTheme" parent="AppTheme">
        <item name="colorButtonNormal">@color/selector_button_danger</item>
    </style>

    <style name="GlobalTextApperance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/eurostileltstd</item>
        <item name="fontFamily">@font/eurostileltstd</item>
    </style>

    <style name="TextErrorAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="BottomNavigationTextAppearanceInactive" parent="TextAppearance.AppCompat">
        <item name="android:textSize">6sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BottomNavigationTextAppearanceActive" parent="TextAppearance.AppCompat">
        <item name="android:textSize">6sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AlertDialogTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <item name="centerTextSize">@dimen/textSizeTitle</item>
    </style>

    <style name="RippleStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>
