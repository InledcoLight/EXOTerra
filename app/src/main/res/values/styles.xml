<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSencondary</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textColorLink">@color/colorAccent</item>
        <item name="colorError">@color/colorRed</item>
        <item name="colorButtonNormal">@color/selector_button</item>

        <item name="android:windowBackground">@mipmap/ic_background</item>
        <item name="alertDialogTheme">@style/DialogTheme</item>

    </style>

